<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    >

    <TextView

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:textColor="#EDF5E1"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/text1"
        android:background="@drawable/tv"

        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:textColor="#EDF5E1"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/text1"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        />



    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"

        android:layout_below="@id/text2"
        android:layout_marginTop="180dp"
        android:textSize="20sp"

        android:background="@drawable/borderradius"

        />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/button7"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"

        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/button4"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"


        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"



        />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@id/button4"
        android:layout_below="@id/button8"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"

        />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/button4"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"


        />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button5"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"

        />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button1"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"

        />


    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:layout_below="@id/text2"
        android:layout_marginTop="120dp"

        android:textSize="20sp"
        android:background="@drawable/clear"

        />


    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/button8"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/borderradius"


        />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:background="@drawable/operator"


        />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_below="@id/multiply"
        android:layout_toEndOf="@id/equal"
        android:layout_toRightOf="@id/equal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:background="@drawable/operator"

        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_below="@id/minus"
        android:layout_toEndOf="@id/button9"
        android:layout_toRightOf="@id/button9"
        android:layout_marginLeft="10dp"
        android:background="@drawable/operator"

        android:textSize="30sp"
        />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/plus"
        android:layout_toEndOf="@id/button6"
        android:layout_toRightOf="@id/button6"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/operator"

        />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/button3"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:background="@drawable/operator"
        />

    <Button
        android:id="@+id/clearall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:layout_below="@id/button1"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/clear"
        />


</RelativeLayout>